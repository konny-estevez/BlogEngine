@page
@model WebApp.Pages.Posts.ApproveModel

@{
    ViewData["Title"] = "Submit Post";
}

<h1>Submit Post</h1>

<div>
    <h4>Post</h4>
    <hr />
    @Model.ErrorMessages
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.StateDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.StateDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.UpdatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.UpdatedDate)
        </dd>
        <div class="form-group">
            <form method="post">
                <input type="hidden" asp-for="Post.Id" /> 
                <input type="hidden" asp-for="Action" value="Reject" />
                <textarea asp-for="@Model.RejectComment" ></textarea>
                <br />
                <input type="submit" value="Reject" class="btn btn-danger" />
            </form>
            <form method="post">
                <input type="hidden" asp-for="Post.Id" />
                <input type="hidden" asp-for="Action" value="Approve" />
                <input type="submit" value="Approve" class="btn btn-primary" />
            </form>
        </div>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Post.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
    
</div>
